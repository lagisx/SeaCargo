<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="480" prefWidth="820" style="-fx-background-color: linear-gradient(to bottom right, #cce7ff, #ffffff);" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.seacargo.controllers.LoginController">

    <AnchorPane prefHeight="480" prefWidth="400" style="-fx-background-color: linear-gradient(to bottom right, #0f4c75, #3282b8);">
        <ImageView fx:id="loginImageView" fitHeight="486.0" fitWidth="403.0" preserveRatio="true" />
    </AnchorPane>

    <VBox alignment="CENTER" layoutX="440" layoutY="70" prefHeight="340" prefWidth="340" spacing="15" style="-fx-background-color: #f0f8ff; -fx-border-radius: 12; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 10, 0, 0, 6); -fx-padding: 20;">

        <Label style="-fx-font-size: 22; -fx-text-fill: #0f4c75; -fx-font-weight: bold;" text="Авторизация" />

        <TextField fx:id="loginField" prefHeight="38" promptText="Логин" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #a0c4ff; -fx-padding: 0 10 0 10;" />

        <PasswordField fx:id="passwordField" prefHeight="38" promptText="Пароль" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #a0c4ff; -fx-padding: 0 10 0 10;" />

        <Button fx:id="loginButton" onAction="#connect" prefHeight="38" prefWidth="200" style="-fx-background-color: linear-gradient(to right, #0f4c75, #3282b8); -fx-text-fill: white; -fx-font-size: 14; -fx-font-weight: bold; -fx-background-radius: 8;" text="Войти" />

        <Label fx:id="errorLabel" style="-fx-font-size: 12;" textFill="red" />

        <HBox alignment="CENTER" spacing="10">
            <Hyperlink onAction="#ForgotPassword" style="-fx-text-fill: #0f4c75; -fx-font-size: 12;" text="Забыли пароль?" />
            <Label style="-fx-text-fill: gray;" text="|" />
            <Hyperlink onAction="#handleRegister" style="-fx-text-fill: #0f4c75; -fx-font-size: 12;" text="Регистрация" />
        </HBox>
    </VBox>
</AnchorPane>
