<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="480" prefWidth="820" style="-fx-background-color: linear-gradient(to bottom right, #cce7ff, #ffffff);" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.seacargo.controllers.RegisterController">
    <AnchorPane prefHeight="486.0" prefWidth="401.0" style="-fx-background-color: linear-gradient(to bottom right, #0f4c75, #3282b8);" />
    <ImageView fx:id="regImageView" fitHeight="486.0" fitWidth="403.0" preserveRatio="true" />

    <VBox alignment="CENTER" layoutX="440" layoutY="50" prefHeight="420" prefWidth="340" spacing="15" style="-fx-background-color: #f0f8ff; -fx-border-radius: 12; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 10, 0, 0, 6); -fx-padding: 20;">
        <Label style="-fx-font-size: 22; -fx-text-fill: #0f4c75; -fx-font-weight: bold;" text="Регистрация" />

        <TextField fx:id="usernameField" prefHeight="38" promptText="Имя пользователя" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #a0c4ff; -fx-padding: 0 10 0 10;" />
        <TextField fx:id="emailField" prefHeight="38" promptText="Email" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #a0c4ff; -fx-padding: 0 10 0 10;" />
        <PasswordField fx:id="passwordField" prefHeight="38" promptText="Пароль" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #a0c4ff; -fx-padding: 0 10 0 10;" />
        <PasswordField fx:id="confirmPasswordField" prefHeight="38" promptText="Подтвердите пароль" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #a0c4ff; -fx-padding: 0 10 0 10;" />

        <HBox alignment="CENTER_LEFT" spacing="15">
         <Pane layoutX="116.0" layoutY="10.0" prefHeight="17.0" prefWidth="39.0" />
            <RadioButton fx:id="driverRadio" alignment="CENTER_RIGHT" prefHeight="17.0" prefWidth="91.0" style="-fx-text-fill: #0f4c75; -fx-font-size: 12;" text="Перевозчик" />
         <Pane prefHeight="17.0" prefWidth="7.0" />
            <RadioButton fx:id="logistRadio" prefHeight="17.0" prefWidth="66.0" style="-fx-text-fill: #0f4c75; -fx-font-size: 12;" text="Логист" />
        </HBox>

        <Button fx:id="registerButton" onAction="#handleRegister" prefHeight="32.0" prefWidth="200" style="-fx-background-color: linear-gradient(to right, #0f4c75, #3282b8); -fx-text-fill: white; -fx-font-size: 14; -fx-font-weight: bold; -fx-background-radius: 8;" text="Зарегистрироваться" />

        <HBox alignment="CENTER" spacing="10">
            <Label style="-fx-text-fill: #0f4c75; -fx-font-size: 12;" text="Уже есть аккаунт?" />
            <Hyperlink onAction="#goBackOnLogin" style="-fx-text-fill: #0f4c75; -fx-font-size: 12;" text="Войти" />
        </HBox>
        <Label fx:id="errorLabel" style="-fx-font-size: 12;" textFill="red" />
    </VBox>
</AnchorPane>
