<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="340.0" prefWidth="400.0"
            style="-fx-background-color: linear-gradient(to bottom right, #e0f7ff, #ffffff);
                   -fx-background-radius: 12;"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.seacargo.controllers.EditCargoController">

    <VBox alignment="CENTER" layoutX="50" layoutY="40" spacing="15" prefWidth="300">
        <Label text="Редактировать груз" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #0f4c75;"/>

        <TextField fx:id="nameField" promptText="Название груза"/>
        <TextField fx:id="weightField" promptText="Вес груза"/>
        <TextField fx:id="senderField" promptText="Отправитель"/>
        <TextField fx:id="receiverField" promptText="Получатель"/>

        <Button fx:id="saveBtn"
                text="Сохранить изменения"
                style="-fx-background-color: #0f4c75; -fx-text-fill: white;
                       -fx-font-weight: bold; -fx-background-radius: 8;"/>
    </VBox>
</AnchorPane>
