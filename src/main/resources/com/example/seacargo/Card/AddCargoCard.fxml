<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane prefHeight="380.0" prefWidth="420.0"
            style="-fx-background-color: linear-gradient(to bottom right, #e0f7ff, #ffffff);"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.seacargo.controllers.AddCargoController">

    <VBox alignment="CENTER" layoutX="30" layoutY="20" prefWidth="360" spacing="20"
          style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 8, 0, 0, 4);">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <Label text="Добавить новый груз"
               style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #0f4c75;"/>

        <TextField fx:id="nameField" promptText="Название груза"
                   style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #cfd8dc; -fx-padding: 8;"/>
        <TextField fx:id="weightField" promptText="Вес груза"
                   style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #cfd8dc; -fx-padding: 8;"/>
        <TextField fx:id="senderField" promptText="Отправитель"
                   style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #cfd8dc; -fx-padding: 8;"/>
        <TextField fx:id="receiverField" promptText="Получатель"
                   style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #cfd8dc; -fx-padding: 8;"/>

        <Button fx:id="addCargoBtn" text="Добавить"
                style="-fx-background-radius: 10; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-color: linear-gradient(to right, #0f4c75, #3282b8);"
                prefWidth="200" prefHeight="35"/>
    </VBox>
</AnchorPane>
