<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.seacargo.controllers.CardController.AddFlightController"
            prefWidth="400" prefHeight="300"
            style="-fx-background-color: linear-gradient(to bottom right, #f3f4f6, #ffffff);">

    <VBox spacing="15" alignment="CENTER" layoutX="50" layoutY="30" prefWidth="300">
        <Label text="Добавить новый рейс" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #1e3a8a;"/>

        <TextField fx:id="flightNumberField" promptText="Номер рейса"/>
        <TextField fx:id="departureField" promptText="Пункт отправления"/>
        <TextField fx:id="destinationField" promptText="Пункт назначения"/>
        <DatePicker fx:id="flightDatePicker" promptText="Дата рейса"/>

        <HBox spacing="10" alignment="CENTER">
            <Button text="Добавить" onAction="#addFlight"
                    style="-fx-background-color: linear-gradient(to right, #1e3a8a, #60a5fa);
                           -fx-text-fill: white; -fx-font-size: 14; -fx-background-radius: 12;"/>
            <Button text="Отмена" onAction="#cancel"
                    style="-fx-background-color: #e5e7eb; -fx-font-size: 14; -fx-background-radius: 12;"/>
        </HBox>
    </VBox>
</AnchorPane>
