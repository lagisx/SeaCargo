<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.seacargo.controllers.CardController.FlightCardController"
            prefHeight="120" prefWidth="850" style="-fx-background-color: #ffffff; -fx-background-radius: 8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 4,0,0,2);">

    <HBox spacing="15" alignment="CENTER_LEFT" layoutX="10" layoutY="10" prefHeight="100" prefWidth="830">
        <VBox spacing="5">
            <Label fx:id="flightName" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #0f4c75;" />
            <Label fx:id="flightInfo" style="-fx-font-size: 14; -fx-text-fill: #3282b8;" />
        </VBox>
        <Pane HBox.hgrow="ALWAYS"/>
        <Button fx:id="assignCargoBtn" text="Назначить грузы" style="-fx-background-color: #3282b8; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;" />
    </HBox>

</AnchorPane>

