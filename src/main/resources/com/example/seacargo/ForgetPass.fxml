<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="480" prefWidth="820"
            style="-fx-background-color: linear-gradient(to bottom right, #cce7ff, #ffffff);"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.seacargo.controllers.ForgetPassController">

    <AnchorPane prefHeight="480" prefWidth="400"
                style="-fx-background-color: linear-gradient(to bottom right, #0f4c75, #3282b8);">
        <ImageView fx:id="forgotPasswordImage" fitHeight="486.0" fitWidth="403.0" preserveRatio="true"/>
    </AnchorPane>

    <VBox alignment="CENTER" layoutX="440" layoutY="70" prefHeight="340" prefWidth="340" spacing="15"
          style="-fx-background-color: #f0f8ff; -fx-border-radius: 12; -fx-background-radius: 12;
                 -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 10, 0, 0, 6); -fx-padding: 25;">

        <Label style="-fx-font-size: 22; -fx-text-fill: #0f4c75; -fx-font-weight: bold;" text="Восстановление пароля"/>

        <Label style="-fx-font-size: 13; -fx-text-fill: gray; -fx-wrap-text: true; -fx-text-alignment: center;" text="Введите логин"/>

        <HBox alignment="CENTER_LEFT" spacing="10"
              style="-fx-background-color: #ffffff; -fx-border-radius: 8; -fx-background-radius: 8;
                     -fx-padding: 5 10 5 10; -fx-border-color: #a0c4ff;">
            <TextField fx:id="loginField" prefHeight="38" promptText="Логин"
                       style="-fx-background-color: transparent; -fx-border-width: 0; -fx-font-size: 14;"/>
        </HBox>

        <Label style="-fx-font-size: 13; -fx-text-fill: gray; -fx-wrap-text: true; -fx-text-alignment: center;" text="Введите новый пароль"/>

        <HBox alignment="CENTER_LEFT" spacing="10"
              style="-fx-background-color: #ffffff; -fx-border-radius: 8; -fx-background-radius: 8;
                     -fx-padding: 5 10 5 10; -fx-border-color: #a0c4ff;">
            <PasswordField fx:id="newPasswordField" prefHeight="38" promptText="Новый пароль"
                           style="-fx-background-color: transparent; -fx-border-width: 0; -fx-font-size: 14;"/>
        </HBox>

        <Label fx:id="labelError" style="-fx-font-size: 12; -fx-text-fill: red;" text=""/>

        <Button fx:id="sendButton" onAction="#resetPassword" prefHeight="38" prefWidth="200"
                style="-fx-background-color: linear-gradient(to right, #0f4c75, #3282b8);
                       -fx-text-fill: white; -fx-font-size: 14; -fx-font-weight: bold; -fx-background-radius: 8;"
                text="Сбросить пароль"/>

        <HBox alignment="CENTER" spacing="10">
            <Hyperlink onAction="#backToLogin" style="-fx-text-fill: #0f4c75; -fx-font-size: 12;" text="Назад к входу"/>
        </HBox>

    </VBox>

</AnchorPane>
